<h1>プロフィール編集</h1>
<%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>
  <div>
    <%= f.label :"画像" %>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :"名前" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :"自己紹介" %>
    <%= f.text_area :introduction %>
  </div>
  <%= f.submit "変更を保存" %>
<% end %>