<h2>Profile</h2>
<tr><%= image_tag customer.get_profile_image(150, 100) %></tr>
<table class="table">
  <tbody>
    <tr>
      <th><%= customer.name %></th>
    </tr>
    <tr>
      <th><%= customer.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <div class="mx-auto">
  <% if customer.id == current_customer.id && current_customer.email != 'guest@example.com' %>
    <%= link_to "Profile Edit", edit_public_customer_path(customer), class:"btn btn-outline-dark col-12" %>
  <% end %>
  </div>
</div>
