<!--コメント一覧-->
<div class="row">
  <table class="table">
      <% post_cosme.comments.each do |comment| %>
        <tr id="comment_<%=comment.id%>">
          <td rowspan="2"><%= image_tag comment.customer.get_profile_image(70,70) %></td>
          <th>
            <span><%= comment.customer.name %></span>
            <% if admin_signed_in? %>
              <%= link_to "削除", admin_post_cosme_comment_path(comment.post_cosme, comment), method: :delete, remote: true, class: "btn btn-outline-danger" %>
            <% elsif comment.customer == current_customer %>
              <%= link_to "削除", public_post_cosme_comment_path(comment.post_cosme, comment), method: :delete, remote: true, class: "btn btn-outline-danger" %>
            <% end %>
          </th>

          <tr><td><%= comment.comment %></td></tr>
        </tr>
      <% end %>
  </table>
</div>
