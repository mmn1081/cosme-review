
<div class="notifications">
 <div class="notice"><%= flash[:alert] %></div>
</div>
<div class="container">
  <div class="row mt-5 mb-3">
    <div class="col-12">
      <h2 class="d-flex align-items-center justify-content-center">会員ログイン</h2>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-8">
      <% if admin_signed_in? %><!--管理者でログインしているときに会員ページに入れない-->
        <p class="text-center">既に管理者側でログイン中です</p>
        <p class="text-center">ログアウト後に再度お試しください</p>
        <%= link_to "管理者ページへ戻る",admin_customers_path,class: "btn btn-outline-info ml-5 col-5" %>
        <%= link_to "ログアウト",destroy_customer_session_path, method: :delete, class: "btn btn-outline-danger col-5" %>
      <% else %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <table class="table">
            <tr>
              <th><%= f.label :メールアドレス %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :パスワード %></th>
              <td><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></td>
            </tr>
          </table>

          <div class="row">
            <div class="mx-auto col-2">
              <%= f.submit "ログイン", class: "btn btn-dark" %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="mx-auto col-4">
              <%= render "public/shared/links" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
