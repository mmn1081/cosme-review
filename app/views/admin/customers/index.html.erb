<div class="notifications">
 <div class="notice"><%= flash[:notice] %></div>
</div>
<div class="container">
  <div class="row mt-5 mb-3">
    <div class="col-12">
      <h1 class="d-flex align-items-center justify-content-center">Members</h1>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-lg-5 col-sm-8">
      <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>ニックネーム</th>
            <th>Email</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <th colspan="1"></th>
              <th>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.name %>
                <% end %>
              </th>
              <th><%= customer.email %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
