<%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
  <h1><%= @customer.name %>さんの会員情報編集</h1>
  <table>
    <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
    </tr>
    <tr>
      <th>名前</th>
      <th><%= f.text_field :name %></th>
    </tr>
    <tr>
      <th>自己紹介</th>
      <th><%= f.text_field :introduction %></th>
    </tr>
    <tr>
      <th>メ－ルアドレス</th>
      <th><%= f.text_field :email %></th>
    </tr>
  </table>
  <%= f.submit "変更を保存",class: "glyphicon glyphicon-pencil btn btn-success pull-right" %>
  <%= link_to "戻る", admin_customer_path(@customer.id),class: "btn btn-primary" %>
<% end %>

